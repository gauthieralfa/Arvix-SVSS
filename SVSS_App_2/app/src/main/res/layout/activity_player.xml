<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlayerActivity">

    <include layout="@layout/toolbar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#ddd">

        <ImageView
            android:layout_margin="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/music_note_player" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cacaca"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"/>

    <SeekBar
        android:id="@+id/activity_player_progression_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cacaca"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        android:paddingVertical="8dp"
        android:background="#fff" >

        <Button
            android:id="@+id/activity_player_play_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/play"
            android:layout_centerVertical="true"
            android:layout_marginLeft  ="5dp"
            android:layout_marginRight="14dp" />

        <Button
            android:id="@+id/activity_player_stop_btn"
            android:layout_toRightOf="@id/activity_player_play_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/stop"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>

        <Button
            android:id="@+id/activity_player_record_btn"
            android:layout_toRightOf="@id/activity_player_stop_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/rec" />

        <TextView
            android:id="@+id/activity_player_elapsed_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/activity_player_slash_txt"
            android:textSize="15sp"
            android:text="00:00" />

        <TextView
            android:id="@+id/activity_player_slash_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/activity_player_total_time_txt"
            android:textSize="15sp"
            android:text="/" />

        <TextView
            android:id="@+id/activity_player_total_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:text="00:00" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cacaca"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"/>


    <View
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="1dp"
        android:background="#FC5E5E"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ff9B9B"/>

    <Button
        android:id="@+id/activity_player_home_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:text="@string/genere_new" />

</LinearLayout>